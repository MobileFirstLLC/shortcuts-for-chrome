{
  "name": "shortcuts-for-chrome",
  "version": "3.7.0",
  "license": "MIT",
  "author": {
    "name": "Neea",
    "email": "hi@neea.dev",
    "url": "https://neea.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MobileFirstLLC/shortcuts-for-chrome.git"
  },
  "description": "A customizable Chrome browser navigation menu for technical users.",
  "homepage": "https://chrome.google.com/webstore/detail/jnmekaomnicdcpgdndekkmojfomifjal",
  "scripts": {
    "start": "npm run locales && xt-build -e dev -w",
    "build": "npm run locales && xt-build -e prod",
    "docs": "jsdoc2md \"./src/**/*.{js, json}\" > docs/docs/api.md",
    "docs:watch": "cd docs && mkdocs serve",
    "test": "xt-test",
    "coverage": "nyc --reporter=lcov npm run test",
    "locales": "node utilities/locales.js",
    "translate": "node utilities/translate.js",
    "clean": "xt-clean",
    "push_tags": "git push --follow-tags origin main",
    "patch": "npx standard-version --release-as patch && npm run push_tags",
    "minor": "npx standard-version --release-as minor && npm run push_tags"
  },
  "devDependencies": {
    "@google-cloud/translate": "9.3.0",
    "extension-cli": "1.2.5-alpha.0",
    "jsdoc-to-markdown": "9.1.3",
    "moment": "^2.30.1",
    "webpack": "5.104.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      ":disableDependencyDashboard"
    ]
  },
  "engines" : {
    "node" : ">=24.0.0"
  },
  "eslintIgnore": [
    "test/**/*"
  ],
  "standard-version": {
    "infile": "docs/docs/changelog.md"
  },
  "xtbuild": {
    "assets": "assets/img/*",
    "js_bundles": [
      {
        "name": "background",
        "src": "./src/background.js"
      },
      {
        "name": "popup",
        "src": "./src/popup.js"
      }
    ],
    "scss_bundles": [
      {
        "src": [
          "./src/shared/theme.scss",
          "./src/popup/popup.scss",
          "./src/**/*.scss"
        ],
        "name": "styles"
      }
    ],
    "locales_dir": "./locales/",
    "locales_list": [
      "am",
      "ar",
      "bg",
      "bn",
      "ca",
      "cs",
      "da",
      "de",
      "el",
      "en",
      "en_GB",
      "es",
      "es_419",
      "et",
      "fa",
      "fi",
      "fil",
      "fr",
      "gu",
      "he",
      "hi",
      "hr",
      "hu",
      "id",
      "it",
      "ja",
      "kn",
      "ko",
      "lt",
      "lv",
      "ml",
      "mr",
      "ms",
      "nl",
      "no",
      "pl",
      "pt_BR",
      "pt_PT",
      "ro",
      "ru",
      "sk",
      "sl",
      "sr",
      "sv",
      "sw",
      "ta",
      "te",
      "th",
      "tr",
      "uk",
      "vi",
      "zh_CN",
      "zh_TW"
    ]
  }
}
