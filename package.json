{
  "name": "shortcuts-for-chrome",
  "version": "3.4.0",
  "license": "MIT",
  "author": {
    "name": "Mobile First",
    "email": "hello@mobilefirst.me",
    "url": "https://mobilefirst.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MobileFirstLLC/shortcuts-for-chrome.git"
  },
  "description": "Handy menu of Chrome URLs",
  "homepage": "https://chrome.google.com/webstore/detail/jnmekaomnicdcpgdndekkmojfomifjal",
  "scripts": {
    "start": "xt-build -e dev -w",
    "build": "xt-build -e prod",
    "docs": "xt-docs -c docs/config.json",
    "test": "xt-test",
    "clean": "xt-clean",
    "sync": "xt-sync",
    "coverage": "nyc --reporter=lcov npm run test",
    "translate": "node i18n/translate.js"
  },
  "devDependencies": {
    "cws-publish": "^2.0.4",
    "extension-cli": "^1.2.0-alpha.1",
    "foodoc": "^0.0.9"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintIgnore": [
    "test/**/*"
  ],
  "standard-version": {
    "infile": "docs/files/changelog.md"
  },
  "xtbuild": {
    "assets": "assets/img/*",
    "js_bundles": [
      {
        "name": "background",
        "src": "./src/background.js"
      },
      {
        "name": "popup",
        "src": "./src/popup.js"
      }
    ],
    "scss_bundles": [
      {
        "src": [
          "./src/shared/theme.scss",
          "./src/popup/popup.scss",
          "./src/**/*.scss"
        ],
        "name": "styles"
      }
    ],
    "locales_list": [
      "en",
      "fi"
    ]
  }
}
